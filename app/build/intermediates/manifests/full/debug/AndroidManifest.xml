            android:theme="@android:style/Theme.Holo.Light.Dialog" />
        <activity
            android:name="org.ei.telemedicine.doctor.ViewPreVisitScreenActivity"
            android:screenOrientation="landscape" />

        <receiver android:name="org.ei.telemedicine.view.receiver.SyncBroadcastReceiver" />
        <receiver android:name="org.ei.telemedicine.view.receiver.ConnectivityChangeReceiver" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <activity
            android:name="org.ei.telemedicine.view.activity.ActionActivity"
            android:label="@string/title_activity_action"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen" >
        </activity>
