        <activity
            android:name="org.ei.telemedicine.doctor.DoctorPlanofCareActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="org.ei.telemedicine.view.activity.ViewPlanOfCareActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="org.ei.telemedicine.doctor.NativeDoctorActivity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Holo.NoActionBar" />
        <activity
            android:name="org.ei.telemedicine.view.activity.NativeOverviewActivity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" />
        <activity
