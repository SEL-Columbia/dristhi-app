<?xml version="1.0" encoding="utf-8"?>
<org.ei.telemedicine.view.customControls.VerticalScrollview xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e5e5e5"
    android:visibility="visible"
    android:fillViewport="false"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <org.ei.telemedicine.view.customControls.CustomFontTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_blue_dark"
            android:gravity="center"
            android:text="Plan of Care"
            android:textColor="@android:color/black"
            android:textSize="35sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.2"
                android:background="@drawable/layout_border">

                <ImageView
                    android:id="@+id/iv_doc_profile"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/poc_doctor_icon" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="4dp"
                    android:text="DOCTOR"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="20sp" />

                <org.ei.telemedicine.view.customControls.CustomFontTextView
                    android:id="@+id/tv_doc_name"
                    style="@style/CustomFontTextViewStyle.ListView.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/textView"
                    android:layout_marginBottom="2dp"
                    android:layout_toRightOf="@+id/iv_doc_profile"
                    android:text="Dr.Naveen"
                    android:textSize="25sp" />

                <org.ei.telemedicine.view.customControls.CustomFontTextView
                    android:id="@+id/tv_doc_type"
                    style="@style/CustomFontTextViewStyle.ListView.Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_doc_name"
                    android:layout_toRightOf="@+id/iv_doc_profile"
                    android:text="Child Illness"
                    android:textSize="20sp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1.8"
                android:background="@drawable/layout_border">

                <ImageView
                    android:id="@+id/iv_mother_profile"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/poc_mother_icon" />

                <org.ei.telemedicine.view.customControls.CustomFontTextView
                    android:id="@+id/tv_mother_name"
                    style="@style/CustomFontTextViewStyle.ListView.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mother Name"
                    android:textSize="25sp"
                    android:layout_above="@+id/tv_age_title"
                    android:layout_toRightOf="@+id/iv_mother_profile" />

                <TextView
                    android:id="@+id/tv_age_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age :"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:layout_above="@+id/tv_village_title"
                    android:layout_alignLeft="@+id/tv_mother_name"
                    android:layout_marginLeft="23dp" />

                <org.ei.telemedicine.view.customControls.CustomFontTextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:layout_above="@+id/tv_village_title"
                    android:layout_alignRight="@+id/tv_village_title" />

                <TextView
                    android:id="@+id/tv_visit_type_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visit Type :"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:layout_above="@+id/tv_village"
                    android:layout_alignLeft="@+id/tv_village"
                    android:layout_marginLeft="27dp" />

                <org.ei.telemedicine.view.customControls.CustomFontTextView
                    android:id="@+id/tv_visit_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:text="ANC"
                    android:layout_above="@+id/tv_village"
                    android:layout_toRightOf="@+id/tv_visit_type_title" />

                <TextView
                    android:id="@+id/tv_village_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Village :"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@+id/tv_age_title" />

                <org.ei.telemedicine.view.customControls.CustomFontTextView
                    android:id="@+id/tv_village"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/tv_village_title" />

            </RelativeLayout>

        </LinearLayout>

        <org.ei.telemedicine.view.customControls.CustomFontTextView
            style="@style/CustomFontTextViewStyle.ListView.Normal.Bold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="ICD 10 Diagnosis"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <AutoCompleteTextView
            android:id="@+id/mact_icd10_diagnosis"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_corner_edittext"
            android:completionThreshold="2"
            android:padding="3dp"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <ListView
            android:id="@+id/lv_selected_icd10"
            android:layout_width="500dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/listview_corner_background"
            android:divider="@android:color/transparent"
            android:visibility="gone" />

        <org.ei.telemedicine.view.customControls.CustomFontTextView
            style="@style/CustomFontTextViewStyle.ListView.Normal.Bold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Investigations"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/sp_services"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <AutoCompleteTextView
            android:id="@+id/act_tests"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_corner_edittext"
            android:completionThreshold="2"
            android:padding="3dp"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <ListView
            android:id="@+id/lv_selected_tests"
            android:layout_width="500dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/listview_corner_background"
            android:divider="@android:color/transparent"
            android:visibility="gone" />

        <org.ei.telemedicine.view.customControls.CustomFontTextView
            style="@style/CustomFontTextViewStyle.ListView.Normal.Bold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Drugs"
            android:textColor="@android:color/black"
            android:textSize="20sp" />


        <Spinner
            android:id="@+id/sp_drug_name"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <Spinner
            android:id="@+id/sp_drug_frequency"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <Spinner
            android:id="@+id/sp_drug_direction"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <Spinner
            android:id="@+id/sp_drug_dosage"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <org.ei.telemedicine.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Number of Days"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:layout_margin="5dp" />

            <EditText
                android:id="@+id/et_drug_no_of_days"
                android:layout_width="70dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_corner_edittext"
                android:inputType="number"
                android:padding="2dp"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <org.ei.telemedicine.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Qty"
                android:textColor="@android:color/black"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/et_drug_qty"
                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_corner_edittext"
                android:inputType="number"
                android:padding="2dp"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <org.ei.telemedicine.view.customControls.CustomFontTextView
                android:id="@+id/tv_stop_by_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Stop By"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/ib_stop_by_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@android:color/transparent"
                android:src="@drawable/poc_calender"
                android:visibility="gone" />


            <ImageButton
                android:id="@+id/ib_add_drug"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="#2d000000"
                android:src="@drawable/poc_add"
                android:layout_margin="5dp" />

        </LinearLayout>

        <ListView
            android:id="@+id/lv_selected_drugs"
            android:layout_width="500dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/listview_corner_background"
            android:visibility="gone" />

        <Switch
            android:id="@+id/switch_poc_pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:text="Do you want to keep POC Pending"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_reason"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_corner_edittext"
            android:hint="reason \n "
            android:padding="3dp"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_advice"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_corner_edittext"
            android:hint="advice \n "
            android:padding="3dp"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@color/transparent_gray"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/iv_anm_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@color/transparent_blue"
                android:padding="2dp"
                android:src="@drawable/poc_anm" />

            <org.ei.telemedicine.view.customControls.CustomFontTextView
                android:id="@+id/tv_health_worker_name_title"
                style="@style/CustomFontTextViewStyle.ListView.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_anm_logo"
                android:layout_marginLeft="13dp"
                android:layout_toRightOf="@+id/iv_anm_logo"
                android:text="Health Worker Name :"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <org.ei.telemedicine.view.customControls.CustomFontTextView
                android:id="@+id/tv_health_worker_name"
                style="@style/CustomFontTextViewStyle.ListView.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_health_worker_name_title"
                android:layout_toRightOf="@+id/tv_health_worker_name_title"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <org.ei.telemedicine.view.customControls.CustomFontTextView
                android:id="@+id/tv_health_worker_village_name_title"
                style="@style/CustomFontTextViewStyle.ListView.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_health_worker_name_title"
                android:layout_alignParentBottom="true"
                android:text="Village Name :"
                android:textSize="20sp" />

            <org.ei.telemedicine.view.customControls.CustomFontTextView
                android:id="@+id/tv_health_worker_village_name"
                style="@style/CustomFontTextViewStyle.ListView.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_health_worker_village_name_title"
                android:textSize="20sp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="7dp"
            android:gravity="center"
            android:weightSum="3">

            <Button

                android:id="@+id/bt_save_plan_of_care"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/holo_blue_dark"
                android:ems="10"
                android:text="Save"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</org.ei.telemedicine.view.customControls.VerticalScrollview>