<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/client_profile_pic_width"
            android:layout_height="@dimen/client_profile_pic_width"
            android:id="@+id/householdprofileview"
            android:src="@drawable/child_boy_infant"
            android:layout_margin="15dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                style="@style/CustomFontTextViewStyle"
                android:text="Large Text"
                android:layout_margin="1dp"
                android:id="@+id/fathersname"
                android:textSize="18sp"
                android:textColor="@color/text_black" />
            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                style="@style/CustomFontTextViewStyle"
                android:text="Large Text"
                android:layout_margin="1dp"
                android:id="@+id/mothersname"
                android:textSize="18sp"
                android:textColor="@color/text_black" />
            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                style="@style/CustomFontTextViewStyle"
                android:text="Large Text"
                android:layout_margin="1dp"
                android:id="@+id/age"
                android:textSize="18sp"
                android:textColor="@color/text_black" />
            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                style="@style/CustomFontTextViewStyle"
                android:text="Large Text"
                android:layout_margin="1dp"
                android:id="@+id/jivitahhid"
                android:textColor="@color/alert_urgent_red"
                android:textSize="18sp" />
            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                style="@style/CustomFontTextViewStyle"
                android:text="Large Text"
                android:layout_margin="1dp"
                android:id="@+id/gobhhid"
                android:textSize="18sp"
                android:textColor="@color/light_blue" />

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                style="@style/CustomFontTextViewStyle"
                android:text="Large Text"
                android:id="@+id/village"
                android:textSize="18sp"
                android:layout_margin="1dp"
                android:textColor="@color/text_black" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>