<div class="container-fluid dropdown dropdown-filter">
    <a class="btn dropdown-toggle toggle-filter" data-toggle="dropdown">
        Show: All
        <span class="caret pull-right"></span>
    </a>
    <ul id="menu-village" class="dropdown-menu dropdown-menu-filter">
    </ul>
</div>
<div class="tabbable">
    <ul class="nav nav-tabs navbar-fixed-top affected-by-sidepanel">
        <li class="active overdue"><a href="#overdue" data-toggle="tab">Overdue (<span id="overdue-count">{{overdue.length}}</span>)</a></li>
        <li class="upcoming"><a href="#upcoming" data-toggle="tab">To Do (<span id="upcoming-count">{{upcoming.length}}</span>)</a></li>
        <li class="completed"><a href="#completed" data-toggle="tab">Done (<span id="completed-count">{{completed.length}}</span>)</a></li>
    </ul>
</div>

<div class="tab-content container-fluid container-no-padding">
    <div class="tab-pane overdue active" id="overdue">
        {{#each overdue}}
            <div class="alert overdue alert-row {{villageName}}" data-form="{{formToOpen}}" data-caseid="{{caseId}}" data-visitcode="{{visitCode}}">
                <div class="row-fluid">
                    <div class="span2">
                        <img class="todo-box"/>
                    </div>
                    <div class="span10">
                        <div class="dueDate">{{formatDate dueDate}}</div>
                        <div class="beneficiaryName">{{beneficiaryName}}</div>
                        <div class="husbandName">{{husbandName}}</div>
                        <div class="detail">{{description}}</div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>

    <div class="tab-pane upcoming" id="upcoming">
        {{#each upcoming}}
            <div class="alert upcoming alert-row {{villageName}}" data-form="{{formToOpen}}" data-caseid="{{caseId}}" data-visitcode="{{visitCode}}">
                <div class="row-fluid">
                    <div class="span2">
                        <img class="todo-box"/>
                    </div>
                    <div class="span10">
                        <div class="dueDate">{{formatDate dueDate}}</div>
                        <div class="beneficiaryName">{{beneficiaryName}}</div>
                        <div class="husbandName">{{husbandName}}</div>
                        <div class="detail">{{description}}</div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>

    <div class="tab-pane completed" id="completed">
        {{#each completed}}
            <div class="alert completed alert-row {{villageName}}" data-form="{{formToOpen}}" data-caseid="{{caseId}}" data-visitcode="{{visitCode}}">
                <div class="row-fluid">
                    <div class="span2">
                        <img class="todo-box checked"/>
                    </div>
                    <div class="span10">
                        <div class="dueDate">{{formatDate dueDate}}</div>
                        <div class="beneficiaryName">{{beneficiaryName}}</div>
                        <div class="husbandName">{{husbandName}}</div>
                        <div class="detail">{{description}}</div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>
