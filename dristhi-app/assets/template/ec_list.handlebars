{{#each this}}
    <div class="row-fluid ec {{villageName}}">
        <a data-caseId={{caseId}} class="client-list-item" onClick="javascript: return true;">
            <div class="span8">
                <ul class="client-details unstyled">
                    <li class="big-text">
                        {{capitalize wifeName}}
                        {{#if isHighPriority}}<span class="high-risk"> HP </span>{{/if}}
                    </li>
                    <li>{{husbandName}}</li>
                    <li>
                     EC No: {{ecNumber}}{{#if thayiCardNumber}}, TC No: {{thayiCardNumber}}{{/if}}
                    </li>
                </ul>
            </div>

            <div class="span4 pull-text-completely-right">
                {{formatText villageName}}
                <p>
                {{#if hasTodos}}
                <div class = "todo pull-text-completely-right">
                    <img src="../img/icons/icon-hastodo.png"></img>
                </div>
                {{/if}}
            </div>

            <div class="divider divider-padding-both"></div>
        </a>
    </div>
{{/each}}
